# -------------------
# Symfony
# -------------------
APP_ENV=prod
APP_SECRET=ChangeMe123

# -------------------
# MySQL (ClearDB/JawsDB pour Heroku)
# -------------------
MYSQL_USER=heroku_user
MYSQL_PASSWORD=heroku_password
MYSQL_DATABASE=heroku_db
DATABASE_URL="mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@your-mysql-host:3306/${MYSQL_DATABASE}?serverVersion=8.0&charset=utf8mb4"

# -------------------
# MongoDB (Atlas)
# -------------------
MONGO_INITDB_ROOT_USERNAME=atlas_user
MONGO_INITDB_ROOT_PASSWORD=atlas_password
MONGO_DATABASE=ecoride_mongo
MONGODB_URL="mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@your-mongo-host:27017/${MONGO_DATABASE}?authSource=admin"

# -------------------
# CORS
# -------------------
CORS_ALLOW_ORIGIN="^https?://(your-app-name\.herokuapp\.com)$"

# -------------------
# JWT Lexik
# -------------------
JWT_SECRET_KEY="%kernel.project_dir%/config/jwt/private.pem"
JWT_PUBLIC_KEY="%kernel.project_dir%/config/jwt/public.pem"
JWT_PASSPHRASE=your_jwt_passphrase
